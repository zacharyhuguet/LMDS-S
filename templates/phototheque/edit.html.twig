{% extends 'magasin.html.twig' %}

{% block body %}
	<div class="text-center">
		<h1>Modifier le produit "{{phototheque.titre}}"</h1>
		<a class="btn btn-secondary" href="{{ path('phototheque_index') }}">Retour</a>
		<br/>
		<br/>
			<form name="phototheque" method="post">
		<p>Titre</p>
		{{ form_widget(form.titre) }}
		<br/><br/>
		<button class="btn btn-success">{{ button_label|default('Modifier') }}</button>
		{{ form_row(form._token) }}
		</form>
	</div>
{% endblock %}

